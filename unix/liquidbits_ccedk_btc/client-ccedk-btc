#! /bin/bash

client=../../python/client.py

config=`mktemp`
options=`getopt -o x:a:k:s:i:ou:e:d:f:r:m:t: --long server:,address:,key:,secret:,interest:,ordermatch,unit:,exchange:,deviation:,offset:,restart_timer:,fillamount:,trading: -- "$@"`
eval set -- "$options"

if [ -e pool-ccedk-btc ];then
  cp pool-ccedk-btc $config
fi

while [ $# -gt 0 ]; do
  case $1 in
  -x|--server) echo "server=$2";shift;;
  -a|--address) echo "address=$2";shift;;
  -t|--trading) echo "trading=$2";shift;;
  -k|--key) echo "apikey=$2";shift;;
  -s|--secret) echo "apisecret=$2";shift;;
  -i|--interest) echo "interest=$2";shift;;
  -o|--ordermatch) echo "ordermatch=True";shift;;
  -u|--unit) echo "unit=$2";shift;;
  -e|--exchange) echo "exchange=$2";shift;;
  -d|--deviation) echo "deviation=$2";shift;;
  -f|--offset) echo "offset=$2";shift;;
  -r|--restart_timer) echo "restart_imer=$2";shift;;
  -m|--fillamount) echo "fillamount=$2";shift;;
  (--) shift; break;;
  (-*) break;;
  (*) break;;
  esac
  shift
done >> $config
$client $config
rm $config
